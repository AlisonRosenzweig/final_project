

<% if user_signed_in? %>
<h3> Are you available?</h3>
<% if current_user.available? %>
    <%= form_for current_user, :url => { :action => 'update', :controller=>"devise/registrations"}, html: { method: :put } do |f| %>
    <%= f.hidden_field :available, :value => false %>
    <%= f.submit "Nope, Sorry.  Mark me as unavailable." %>
    <% end %>
  <% else %>
    <%= form_for current_user, :url => { :action => 'update', :controller=>"devise/registrations"}, html: { method: :put } do |f| %>
    <%= f.hidden_field :available, :value => true %>
    <%= f.submit "Mark me as available!" %>
    <% end %>
  <% end %>
<% end %>
<%= link_to "Mark me as available", :method => 'post', :controller => 'users', :action => 'mark_available' %>






