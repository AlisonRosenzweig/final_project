<%= form_for(@lesson) do |f| %>
	<% if @lesson.errors.any? %>
		<div id="error_explanation">
			<h2><%pluralize(@lesson.errors.count, "error") %> stopped you from requesting a tutor: </h2>
			<ul>
				<% @lesson.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label "What are you stuck on?"%><br />
		<%= f.text_area :topic %>
	</div>
	<%= f.submit "Request your tutor!" %>
<% end %>